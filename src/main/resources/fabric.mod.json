{
  "schemaVersion": 1,
  "id": "simplemacros",
  "version": "${version}",
  "name": "Simple Macros",
  "description": "Adds simple macros that execute chat commands",
  "authors": [ "Crosby" ],
  "contact": {
    "sources": "https://github.com/RacoonDog/simplemacros",
    "issues": "https://github.com/RacoonDog/simplemacros/issues",
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/fabric-simple-macros"
  },
  "license": "LGPL-3.0",
  "icon": "assets/simplemacros/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.racoondog.simplemacros.SimpleMacros"
    ],
    "modmenu": [
      "io.github.racoondog.simplemacros.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "simplemacros.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.12.0",
    "fabric-key-binding-api-v1": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "cloth-config": ">=4.9"
  },
  "recommends": {
    "modmenu": "*"
  }
}
